version: '3.8'
services:
  api:
    container_name: api
    restart: always
    build: .
    ports:
      - 5000:5000
    depends_on:
      - db
    volumes:
    - .:/usr/src/app
  db:
    container_name: postgres
    image: postgres
    ports:
      - '5433:5432'
    volumes:
      - data:/data/db
    environment:
      - POSTGRES_PASSWORD=1Bedada@Home
      - POSTGRES_DB=salesorder

volumes: 
 data: {}